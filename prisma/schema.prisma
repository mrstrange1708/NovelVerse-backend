generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  lastName  String?
  email     String   @unique
  password  String?
  booksRead Int      @default(0)
  firstName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Books           Books[]           @relation("UserBooks")
  userBooks       UserBooks[]
  readingProgress ReadingProgress[]
  readingStreaks  ReadingStreak[]
}

model Books {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  author      String
  description String?   @db.Text
  publishedAt DateTime?
  category    String
  coverImage  String?   @db.Text
  createdAt   DateTime  @default(now())
  fileSize    BigInt?
  isFeatured  Boolean   @default(false)
  language    String    @default("English")
  pageCount   Int?
  pdfUrl      String?   @db.Text
  manifestUrl String?
  processed   Boolean   @default(false)
  updatedAt   DateTime  @updatedAt

  User            User[]            @relation("UserBooks")
  userBooks       UserBooks[]
  readingProgress ReadingProgress[]
}

model UserBooks {
  A String
  B String

  User  User  @relation(fields: [B], references: [id])
  Books Books @relation(fields: [A], references: [id])

  @@id([A, B])
}

model ReadingProgress {
  id              String   @id @default(uuid())
  userId          String
  bookId          String
  currentPage     Int      @default(1)
  totalPages      Int
  progressPercent Float    @default(0)
  lastReadAt      DateTime @default(now())
  isCompleted     Boolean  @default(false)
  completedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Books @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@index([userId])
  @@index([lastReadAt])
}

model ReadingStreak {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime @db.Date
  pagesRead Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}
