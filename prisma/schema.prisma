generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String?
  email     String   @unique
  password  String?
  booksRead Int      @default(0)
  readBooks Books[]  @relation("UserBooks")
}

model Books {
  id          String   @id @default(uuid())
  title       String
  author      String
  description String?
  publishedAt DateTime?
  readers     User[]   @relation("UserBooks")
}
